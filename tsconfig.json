{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "lib": [
      "es2017",
      "dom"
    ],
    "sourceMap": false,
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "paths": {
      "@angular/*": [
        "../node_modules/@angular/*"
      ]
    }
  },
 
  "angularCompilerOptions": {
    "genDir": "./aot",
    "comments": false,
    "entryModule": "./app/app.module#AppModule",
    "preserveWhitespaces": false,
    "skipMetadataEmit": true
  }
}